{
  "name": "readtomelater",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:client\" \"bun run dev:server\"",
    "dev:client": "cd client && bun run dev",
    "dev:server": "cd server && bun --hot server.ts",
    "build": "bun run build:client && bun run build:server",
    "build:client": "cd client && bun run build",
    "build:server": "cd server && tsc",
    "start": "concurrently \"cd client && bun run preview\" \"cd server && NODE_ENV=production bun server.ts\"",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test:client": "cd client && bun test",
    "test:server": "cd server && bun test",
    "test": "bun test:client && bun test:server"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/bun": "latest",
    "concurrently": "^9.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  }
}
